<% stylesheet 'signin.css' %>

<div class="account-container register stacked">
  <div class="content clearfix">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <h1>Create Your Account</h1>
      <div class="login-fields">
        
        <p>Create your free account:</p>

        <div class="form-inputs">
          <div class="field">
            <%= f.input :firstname, required: true, autofocus: true, placeholder: "Firstname", input_html: { class: "form-control" } %>
          </div> <!-- /field -->
          <div class="field">
            <%= f.input :lastname, required: true, placeholder: "Lastname", input_html: { class: "form-control" } %>
          </div> <!-- /field -->
          <div class="field">
            <%= f.input :company_name, required: true, placeholder: "Company", input_html: { class: "form-control" } %>
          </div> <!-- /field -->
          <div class="field">
            <%= f.input :email, required: true, placeholder: "Email", input_html: { class: "form-control" } %>
          </div> <!-- /field -->
          <div class="field">
            <%= f.input :password, required: true, placeholder: "Password", input_html: { class: "form-control" } %>
          </div> <!-- /field -->
          <div class="field">
            <%= f.input :password_confirmation, required: true, placeholder: "Confirm Password", input_html: { class: "form-control" } %>
          </div> <!-- /field -->
        </div>
      </div> <!-- /login-fields -->
      <div class="login-actions">
        <div class="form-actions">
          <%= f.button :submit, "Register", class: "login-action btn btn-primary" %>
        </div>
      </div> <!-- .actions -->
    <% end %>
  </div> <!-- /content -->
</div> <!-- /account-container -->


<!-- Text Under Box -->
<div class="login-extra">
  <%= render "devise/shared/links" %>
</div> <!-- /login-extra -->

