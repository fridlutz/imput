<div class="row">
  <div class="col-md-12">
    <div class="widget stacked">
      <div class="widget-header">
        <h3>Client</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <%= simple_form_for @client, html: { class: "form-horizontal col-md-7"} do |f| %>
          <%= f.error_notification %>
          <fieldset>
            <div class="form-group">
              <%= f.label :name, class: "col-lg-4" %>
              <%= f.input :name, label: false, wrapper_html: { class:"col-lg-8" }, input_html: { class: "form-control"} %>
            </div>
            <div class="form-group">
              <%= f.label :address, class: "col-lg-4" %>
              <%= f.input :address, label: false, wrapper_html: { class:"col-lg-8" }, input_html: { class: "form-control"} %>
            </div>
            <div class="form-group">
              <%= f.label :notes, class: "col-lg-4" %>
              <%= f.input :notes, label: false, wrapper_html: { class:"col-lg-8" }, input_html: { class: "form-control"} %>
            </div>
          </fieldset>

          <div class="form-actions text-center">
            <%= f.button :submit, class: "btn btn-success" %>
            <%= link_to "Cancel", clients_path, class: "btn btn-default" %>
          </div>
        <% end %>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->         
  </div> <!-- /.col-md-12 -->
</div> <!-- /.row -->
