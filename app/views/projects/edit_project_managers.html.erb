<% javascript 'projects.js' %>

<div class="row">
  <div class="col-md-12">
    <div class="widget stacked">
      <div class="widget-header">
        <h3>Select Project Managers for "<%= @project.name %>"</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <%= simple_form_for @project, html: { class: "form-horizontal col-md-7"} do |f| %>
          <%= f.error_notification %>
          <fieldset>
            <div class="form-group">
              <%= f.label :project_manager_ids, "People", class: "col-lg-4 control-label" %>
              <div class="col-lg-8">
                <%= f.association :project_managers, collection: @project.people.enabled, label: false, label_method: :fullname, input_html: { class: "form-control" } %>
              </div>
            </div>
          </fieldset>

          <div class="form-actions text-center">
            <%= f.button :submit, class: "btn btn-success" %>
            <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
          </div>
        <% end %>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->         
  </div> <!-- /.col-md-12 -->
</div> <!-- /.row -->
